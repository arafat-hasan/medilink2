{
  "name": "medilink-backend",
  "version": "1.0.0",
  "description": "MediLink Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "setup": "node scripts/setup.js",
    "reset": "rm -f database.sqlite3 && npm run setup",
    "railway:build": "npm install && npm run migrate && npm run seed",
    "railway:start": "npm start"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "knex": "^3.0.1",
    "sqlite3": "^5.1.6",
    "nodemailer": "^6.9.7",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": "20.x"
  }
}
